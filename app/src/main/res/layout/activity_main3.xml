<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity3">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/img_2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#AB2196F3"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book a flight"
            android:textColor="@color/white"
            android:layout_margin="13dp"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:layout_margin="8dp"
            android:layout_gravity="end"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_1"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="80dp"/>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_flight_takeoff_24"
                android:layout_gravity="start"
                android:layout_marginLeft="40dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_event_note_24"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_flight_land_24"
                android:layout_gravity="end"
                android:layout_marginRight="40dp"/>



        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="180dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:layout_gravity="start"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Nov30th,2022"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:gravity="end"
                    android:layout_marginRight="45dp"
                    android:textColor="@color/white"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="200dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Boston"
                android:layout_weight="1"
                android:textSize="25dp"

                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cario"
                android:textSize="25sp"
             android:gravity="end"
                android:layout_marginRight="26dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        android:background="@drawable/screen2_curve">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="20dp"
            tools:listitem="@layout/custom_recycler"
            />
    </FrameLayout>

    </FrameLayout>








</LinearLayout>